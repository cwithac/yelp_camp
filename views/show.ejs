<% include partials/head %>

<% include partials/nav %>

<main>
  <section>
    <h1><%= foundCampground.name %></h1>
    <img src="<%= foundCampground.image %>" alt="campground">
    <p><%- foundCampground.description %></p>
  </section>
  <section>
    <button class="inline btn btn-default"><a href="/campgrounds/<%= foundCampground._id %>/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
    </button>
      <form  class="inline" action="/campgrounds/<%= foundCampground._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
      </form>
  </section>
  <section>
    <% for (comment of associatedComments) { %>
            <p><%= comment.content %></p>
    <% } %>
  </section>
  <section>
    <form action='/comments' method='post'>
      <input type='text' name='content' placeholder='Leave a Comment' />
      <input type='hidden' name='campground' value='<%= foundCampground._id %>' />
      <input type='submit' />
    </form>
  </section>
<main>

<a href="/campgrounds"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Back to Campgrounds</a>

<% include partials/foot %>
