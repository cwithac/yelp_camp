<% include partials/head %>

<% include partials/nav %>

<% include partials/alerts %>

<main class="container">
    <h1 class="text-center">Create a New Campground</h1>
    <div class="form">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
            <label for="campground-name">Campground Name:</label>
            <input id="campground-name" class="form-control" type="text" name="name" placeholder="Campground Name" required>
        </div>
        <div class="form-group">
            <label for="campground-description">Description: </label>
            <textarea id="campground-description" class="form-control" name="description" placeholder="Description" rows="5"></textarea>
        </div>
        <div class="form-group">
            <label for="campground-price">Price: </label>
            <input id="campground-price" type="number" class="form-control" name="price" placeholder="Price Per Night" min="0.01" step="0.01" required/>
        </div>
        <div class="form-group">
            <label for="campground-location">Location: </label>
            <input id="campground-location" class="form-control" type="text" name="location" placeholder="Campground Location" required>
        </div>
        <div class="form-group">
          <label for="campground-img">Image URL:</label>
          <input id="campground-img" class="form-control"  type="url" name="image" placeholder="image url">
        </div>
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </form>
      <a href="/campgrounds"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Back to Campgrounds</a>
    </div>
</main>

