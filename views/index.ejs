<% include partials/head %>

<% include partials/nav %>

<main class="container">
  <header class="jumbotron">
    <h1>Yelp Campgrounds</h1>
    <p>Campground Sites Across the Country</p>
    <a class="btn btn-primary" href="/campgrounds/new"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add New Campground</a>
  </header>

  <section>
    <div class="row">
      <% for (campground of campgrounds) { %>
          <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img src="<%= campground.image %>" alt="campground"/>
              <h4 class="text-center caption"><%= campground.name %></h4>
              <p class="text-right"><a class="btn btn-default" href="campgrounds/<%= campground._id %>"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a></p>
            </div>
          </div>
      <% } %>
    </div>
  </section>

</main>

<% include partials/foot %>
